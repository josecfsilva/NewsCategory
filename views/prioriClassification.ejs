              <th>Description</th>
              <th>Category</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(elem, index) { %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= elem.text %></td>
              <td><%= elem.category %></td>
